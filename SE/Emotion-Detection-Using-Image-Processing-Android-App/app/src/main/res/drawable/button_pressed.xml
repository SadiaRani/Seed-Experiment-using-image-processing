    </item>
    <item
        android:state_pressed="false">
        <shape>

            <gradient
                android:angle="180"
                android:centerColor="@color/app_primary"
                android:endColor="@color/app_primary"
                android:startColor="@color/app_primary"
                android:type="linear" />

            <corners
                android:radius="@dimen/dp8"/>
        </shape>
    </item>
